{
 "name": "@igorkowalczyk/countdown.js",
 "version": "0.0.4",
 "description": "A simple and easy-to-use countdown.",
 "author": "Igor Kowalczyk",
 "license": "MIT",
 "repository": "igorkowalczyk/countdown.js",
 "source": "src/index.ts",
 "main": "dist/countdown.js",
 "types": "dist/index.d.ts",
 "module": "dist/countdown.module.js",
 "scripts": {
  "format:check": "prettier --check .",
  "format": "prettier --write . --ignore-unknown",
  "build": "rimraf dist/* &&  microbundle -o dist --target=node --format=es,cjs --generateTypes",
  "docs": "jsdoc src/index.ts -r -d docs -c .jsdoc.json"
 },
 "devDependencies": {
  "@types/node": "^14.14.22",
  "@types/tape": "^4.13.0",
  "microbundle": "^0.13.0",
  "rimraf": "^3.0.2",
  "better-docs": "^2.3.2",
  "clean-jsdoc-theme": "^3.2.7",
  "jsdoc": "^3.6.7",
  "prettier": "^2.3.1",
  "typescript": "^4.1.3"
 },
 "dependencies": {
  "mitt": "^2.1.0"
 },
 "bugs": {
  "url": "https://github.com/igorkowalczyk/countdown/issues"
 },
 "homepage": "https://igorkowalczyk.github.io/countdown"
}
